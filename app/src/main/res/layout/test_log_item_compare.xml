<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_gravity="center"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/compare_item_bkg">


    <TextView
        android:id="@+id/tv_test_title"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@drawable/header_corners"
        android:gravity="center"
        android:paddingTop="4dp"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:fontFamily="@font/iransans_medium"
        tools:text="سوالات زبان کنکور گروه ریاضی فنی سال 97" />


    <TextView
        android:id="@+id/tv_test_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="22dp"
        android:layout_marginRight="22dp"
        android:textColor="#464b4d"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_test_hour"
        app:layout_constraintTop_toBottomOf="@+id/tv_test_title"
        tools:fontFamily="@font/iransans_medium"
        tools:text="تاریخ آزمون: 97/6/21" />

    <TextView
        android:id="@+id/tv_test_hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#464b4d"
        android:layout_marginStart="14dp"
        android:layout_marginLeft="14dp"
        android:layout_marginEnd="22dp"
        android:layout_marginRight="22dp"
        android:layout_marginTop="13dp"
        android:textSize="12sp"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintEnd_toStartOf="@id/tv_test_date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_test_title"
        tools:fontFamily="@font/iransans_medium"
        tools:text="ساعت آزمون: 11:25" />

    <View
        android:id="@+id/view_divider2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:background="#cccccc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_test_date" />

    <TextView
        android:id="@+id/tv_test_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:textColor="#474c4d"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/view_divider2"
        app:layout_constraintStart_toEndOf="@id/tv_test_correct_count"
        app:layout_constraintTop_toBottomOf="@+id/view_divider2"
        tools:fontFamily="@font/iransans_medium"
        tools:text="درصد کسب شده: %50" />

    <TextView
        android:id="@+id/tv_test_correct_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:textColor="#474c4d"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_test_percent"
        app:layout_constraintStart_toEndOf="@id/tv_test_blank_count"
        app:layout_constraintTop_toBottomOf="@+id/view_divider2"
        tools:fontFamily="@font/iransans_medium"
        tools:text="تعداد گزینه صحیح: 15" />

    <TextView
        android:id="@+id/tv_test_blank_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:textColor="#474c4d"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_test_correct_count"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="@id/view_divider2"
        app:layout_constraintTop_toBottomOf="@+id/view_divider2"
        tools:fontFamily="@font/iransans_medium"
        tools:text="تعداد گزینه نزده: 5 " />


</androidx.constraintlayout.widget.ConstraintLayout>